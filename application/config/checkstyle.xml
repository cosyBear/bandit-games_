<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//PUBLISHER//DTD Checkstyle Configuration 1.3//EN" "http://checkstyle.sourceforge.net/dtds/configuration_1_3.dtd">
<module name="Checker">
    <module name="TreeWalker">
        <!-- Enforce indentation of 4 spaces -->
        <module name="Indentation">
            <property name="column" value="4"/>
        </module>

        <!-- Check for whitespace around operators -->
        <module name="WhitespaceAround"/>

        <!-- Prevent magic numbers (numbers not defined as constants) -->
        <module name="MagicNumber">
            <property name="ignoreNumbers" value="0"/>
        </module>

    </module>
</module>
